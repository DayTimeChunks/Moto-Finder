<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_moto_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:gravity="center_vertical">


    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:text="F-478569"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/licence_plate"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed-light"/>

        <TextView
            android:text="Funstrasse 24, 60318 Frankfurt am Main"
            android:id="@+id/address"
            android:layout_below="@+id/licence_plate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_700"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"/>

        <ImageView
            android:id="@+id/moto_icon"
            android:icon="@drawable/ic_motorcycle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:padding="4dp"/>

        <TextView
            android:text="Yugo-123890"
            android:id="@+id/moto_id"
            android:layout_toRightOf="@+id/moto_icon"
            android:layout_below="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/grey_700"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:text="378 m"
            android:id="@+id/distance"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:text="73%"
            android:id="@+id/battery_level"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"/>

        <ImageView
            android:id="@+id/battery_icon"
            android:icon="@drawable/ic_battery_charging_full_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/battery_level"
            android:layout_below="@+id/distance"
            android:paddingTop="4dp"
            android:paddingRight="1dp"/>


    </RelativeLayout>
</LinearLayout>